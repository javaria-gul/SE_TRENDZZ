@{
    ViewBag.Title = "Signup";
}

<div class="container d-flex justify-content-center align-items-center"
     style="min-height: calc(100vh - 70px); margin-top: 40px; margin-bottom: 30px;">
    <div class="card p-5 shadow-lg border-0" style="max-width: 400px; width: 100%; background-color: #efefef; border-radius: 28px;">
        <h2 class="text-center mb-4" style="color: #000000; font-family: 'Inria Sans', sans-serif; font-weight: 800;">Signup</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        @using (Html.BeginForm("Signup", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                <label for="FullName" class="form-label" style="color: #000000; margin-bottom: 1px; padding-left: 5px;">Full Name</label>
                <input type="text" class="form-control" name="FullName" id="FullName" required
                       placeholder="Enter your full name"
                       style="background-color: #ffffff; border-radius: 10px; color: #000000;" />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label" style="color: #000000; margin-bottom: 1px; padding-left: 5px;">Email</label>
                <input type="email" class="form-control" name="email" id="email" required
                       placeholder="Enter your email"
                       style="background-color: #ffffff; border-radius: 10px; color: #000000;" />
            </div>

            <div class="mb-3">
                <label for="PasswordHash" class="form-label" style="color: #000000; margin-bottom: 1px; padding-left: 5px;">Password</label>
                <input type="password" class="form-control" name="PasswordHash" id="PasswordHash" required
                       placeholder="Enter your password"
                       style="background-color: #ffffff; border-radius: 10px; color: #000000;" />
            </div>

            <div class="mb-4">
                <label for="roleID" class="form-label" style="color: #000000; margin-bottom: 1px; padding-left: 5px;">Role</label>
                @Html.DropDownList("roleID", ViewBag.Roles as SelectList, "Select Role", new
                {
                    @class = "form-control",
                    style = "background-color: #ffffff; border-radius: 10px; color: #000000;"
                })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-hover-red mt-2" style="width: 90px;">Sign Up</button>
            </div>
        }

        <p class="text-center mt-4" style="color: #000000;">
            Already have an account?
            <a href="@Url.Action("Login", "Account")"
               class="text-decoration-none"
               style="color: #000000; font-weight: 600; border-bottom: 2px solid #ba0012;">
                Login here
            </a>
        </p>
    </div>
</div>
