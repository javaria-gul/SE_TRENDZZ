@{
    ViewBag.Title = "Login";
}

<div class="container d-flex justify-content-center align-items-start" style="margin-top: 30px; margin-bottom: 30px;">
    <div class="card p-5 shadow-lg border-0" style="max-width: 400px; width: 100%; background-color: #efefef; border-radius: 28px;">
        <h2 class="text-center mb-4" style="color: #000000; font-family: 'Inria Sans', sans-serif; font-weight: 800;">Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                <label for="email" class="form-label" style="color: #000000; margin-bottom: 1px; padding-left: 5px;">Email</label>
                <input type="email" class="form-control" name="email" id="email" required
                       placeholder="Enter your email"
                       style="background-color: #ffffff; border-radius: 10px; color: #000000;" />
            </div>

            <div class="mb-4">
                <label for="password" class="form-label" style="color: #000000; margin-bottom: 1px; padding-left: 5px;">Password</label>
                <input type="password" class="form-control" name="password" id="password" required
                       placeholder="Enter your password"
                       style="background-color: #ffffff; border-radius: 10px; color: #000000;" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-hover-red mt-2" style="width: 90px;">Login</button>
            </div>
        }

        <p class="text-center mt-4" style="color: #000000;">
            Don't have an account?
            <a href="@Url.Action("Signup", "Account")"
               class="text-decoration-none"
               style="color: #000000; font-weight: 600; border-bottom: 2px solid #ba0012;">
                Sign up here
            </a>
        </p>
    </div>
</div>
