<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SE Trendzz</title>

    <!-- Application CSS bundle -->
    @Styles.Render("~/Content/css")
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inria+Sans&family=Jua&display=swap" rel="stylesheet">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Modernizr for feature-detection -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #003777;">
        <div class="container-fluid">
            <a class="navbar-brand text-white fw-bold me-auto"
               href="@Url.Action("Index", "Home")"
               style="font-family: 'Jua', sans-serif; font-size: 28px;">
                SE TRENDZZ
            </a>

            <button class="navbar-toggler bg-white" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Gallery", "Home")">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger text-white" href="@Url.Action("Login", "Account")">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="flex-grow-1 container" style="margin-top: 80px;">
        @RenderBody()
    </main>

    <!-- STICKY FOOTER -->
    <footer class="mt-auto text-white text-center py-3" style="background-color: #003777;">
        <p class="mb-0">© @DateTime.Now.Year SE Trendzz. All rights reserved.</p>
    </footer>

    <!-- Bootstrap 5 Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Optional: your other scripts bundle -->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
